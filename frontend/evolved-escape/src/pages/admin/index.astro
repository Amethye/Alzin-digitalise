---
import Layout from "@layouts/Layout.astro";
import RequireRole from "@components/RequireRole";

const links = [
  { name: "Gestion utilisateurs", path: "/admin/users", color: "bg-blue-100"},
  { name: "Ajouter des articles", path: "/admin/adminpins", color: "bg-blue-100"},
  { name: "Prix", path: "/admin/AdminPrix", color: "bg-blue-100"},
  { name: "Catégories", path: "/admin/AdminCategories", color: "bg-blue-100"},
  { name: "Commandes", path: "/admin/commandes", color: "bg-blue-100"}, 
  { name: "Commandes archivées", path: "/admin/commandes-archive", color: "bg-blue-100"},
  { name: "Demandes de pennes", path: "/admin/DemandePenne", color: "bg-blue-100"},
  { name: "Pins personnalisés", path: "/admin/demande-pins", color: "bg-blue-100"},
  { name: "Stocks", path: "/admin/stocks", color: "bg-blue-100"},
  { name: "Comité CAP", path: "/admin/committee", color: "bg-blue-100"},
];
---

<Layout title="Admin Dashboard">
  <main class="flex flex-1 flex-col items-center gap-6 px-4 py-6 sm:px-6">
    <RequireRole allowedRoles={['admin']} client:load>
      <section class="w-full max-w-5xl">
        <h1 class="mb-6 text-2xl font-bold text-bleu sm:text-3xl">Admin Dashboard</h1>
        <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
          {links.map(link => (
            <a 
              href={link.path} 
              class={`flex flex-col items-center justify-center rounded-xl p-5 text-center shadow-md transition-all duration-200 hover:shadow-xl ${link.color}`}
            >
              <span class="mb-3 text-3xl sm:text-4xl">{link.icon}</span>
              <span class="text-base font-semibold text-bleu sm:text-lg">{link.name}</span>
            </a>
          ))}
        </div>
      </section>
    </RequireRole>
  </main>
</Layout>
