---
import Footer from "@components/Footer.astro";
import { ClientRouter } from "astro:transitions";
import "@styles/base.css";
import '../styles/global.css'

const {
  title: pageTitle,
  description: pageDescription,
  canonical,
} = Astro.props;

const site = Astro.site ?? new URL("https://alzin.fede.fpms.ac.be");
const title = pageTitle ? `${pageTitle} | Alzin FPMs` : "Alzin FPMs";
const description =
  pageDescription ??
  "L'Alzin est un chasonnier qui contient des chants étudiants réprésentant le folklore de la Polytech de Mons et d'autres facultés";
const canonicalURL = new URL(canonical ?? Astro.url.pathname, site)
  .toString()
  .replace(/\/$/, "");
---
<!doctype html>
<html lang="fr-BE" class="scroll-p-24 scroll-smooth lg:scroll-p-[8.5rem]">
  <head>
    <meta charset="utf-8" />
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content="Les IGs" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />

    <title>{title}</title>
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="fr_BE" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:site_name" content="Alzin FPMs" />

    <!-- Poppins (300/400/600) sans plugin -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap"
      rel="stylesheet"
    />
    <!-- Applique Poppins globalement (fonctionne même sans config Tailwind spéciale) -->
    <style is:global>
      html { font-family: "Poppins", system-ui, -apple-system, "Segoe UI", Roboto, Ubuntu, Cantarell, "Noto Sans", sans-serif; }
    </style>

    <ClientRouter />
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body class="antialiased" transition:animate="fade">
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>