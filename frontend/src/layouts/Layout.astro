---

import SpeedInsights from "@vercel/speed-insights/astro";
import { ClientRouter } from "astro:transitions";
import { AstroFont } from "astro-font";

import "@styles/base.css";

import Footer from "@components/Footer.astro";
import Nav from "@components/Nav.tsx"

const {
  title: pageTitle,
  description: pageDescription,
  canonical,
} = Astro.props;

const site = Astro.site ?? new URL("https://alzin.fede.fpms.ac.be");
const title = pageTitle ? `${pageTitle} | Alzin FPMs` : "Alzin FPMs";
const description =
  pageDescription ??
  "L'Alzin est un chasonnier qui contient des chants étudiants réprésentant le folklore de la Polytech de Mons et d'autres facultés";
const canonicalURL = new URL(canonical ?? Astro.url.pathname, site)
  .toString()
  .replace(/\/$/, "");
---

<!doctype html>
<html lang="fr-BE" data-theme="light" class="scroll-p-24 scroll-smooth lg:scroll-p-[8.5rem]">
  <head>
    <meta charset="utf-8" />
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content="Les IGs" />
    <meta name="viewport" content="width=device-width" />
  
    <link rel="icon" type="image/svg+xml" href="/FPMs-icon.svg?v=1" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />

    <title>{title}</title>
    <meta name="og:title" content={title} />
    <meta name="og:description" content={description} />
    <meta name="og:type" content="website" />
    <meta name="og:locale" content="be_FR" />
    <meta name="og:url" content={canonicalURL} />
    <meta name="og:site_name" content="Alzin FPMs" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <ClientRouter />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <SpeedInsights />
    <AstroFont
      config={[
        {
          src: [],
          name: "Poppins",
          googleFontsURL:
            "https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&display=swap",
          preload: true,
          display: "swap",
          selector: "body",
          fallback: "sans-serif",
        },
      ]}
    />
    <script>
      (() => {
        const THEME_FEATURE_ENABLED = false;
        const STORAGE_KEY = "alzin-theme";
        const THEME_VALUES = ["auto", "dark", "light"];
        const getSystemTheme = () => {
          if (!window.matchMedia) {
            return "light";
          }
          return window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light";
        };
        const resolveTheme = (preference) =>
          preference === "auto" ? getSystemTheme() : preference;
        const apply = (preference) => {
          const root = document.documentElement;
          const resolved = resolveTheme(preference);
          root.dataset.theme = resolved;
          root.classList.toggle("dark", resolved === "dark");
          root.style.colorScheme = resolved;
        };
        const stored = typeof localStorage === "undefined" ? null : localStorage.getItem(STORAGE_KEY);
        const initial = THEME_VALUES.includes(stored) ? stored : "auto";
        if (!THEME_FEATURE_ENABLED) {
          apply("light");
          return;
        }
        apply(initial);
        window.addEventListener("storage", (event) => {
          if (event.key !== STORAGE_KEY) return;
          const next = THEME_VALUES.includes(event.newValue)
            ? event.newValue
            : "auto";
          apply(next);
        });
      })();
    </script>
  </head>
  <body class="antialiased bg-gray-50" transition:animate="fade">
    <Nav client:load />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
